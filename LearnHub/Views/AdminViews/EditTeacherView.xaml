<UserControl x:Class="LearnHub.Views.AdminViews.EditTeacherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearnHub.Views.AdminViews" xmlns:components="clr-namespace:LearnHub.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="#fff7f7">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="620"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Sửa giáo viên" Style="{StaticResource font_style}"
   HorizontalAlignment="Left" VerticalAlignment="Center"
   FontSize="30" Margin="10 0 0 0"/>

        <components:TeacherDetailsForm Grid.Row="1"  DataContext="{Binding TeacherDetailsFormViewModel}"/>
    </Grid>
</UserControl>
